<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff0f0f0"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#289BF8">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/btn_left"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_wp_back" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/item_layout"
                    tools:ignore="PxUsage">

                    <TextView
                        style="@style/item_tv_left"
                        android:text="First Name:"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/firstNameEditText"
                        style="@style/item_et_right"
                        tools:ignore="Deprecated,RtlHardcoded,TextFields" />
                </LinearLayout>

                <View style="@style/item_view_line" />

                <LinearLayout
                    style="@style/item_layout"
                    tools:ignore="PxUsage">

                    <TextView
                        style="@style/item_tv_left"
                        android:text="Last Name:"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/lastNameEditText"
                        style="@style/item_et_right"
                        tools:ignore="Deprecated,RtlHardcoded,TextFields" />
                </LinearLayout>

                <View style="@style/item_view_line" />

                <LinearLayout
                    style="@style/item_layout"
                    tools:ignore="PxUsage">

                    <TextView
                        style="@style/item_tv_left"
                        android:text="Card Number:"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/cardNumberEditText"
                        style="@style/item_et_right"
                        android:hint="XXXX XXXX XXXX XXXX"
                        android:inputType="number"
                        android:maxLength="23"
                        tools:ignore="Deprecated,RtlHardcoded,TextFields" />

                </LinearLayout>

                <View style="@style/item_view_line" />

                <LinearLayout
                    style="@style/item_layout"
                    tools:ignore="PxUsage">

                    <TextView
                        style="@style/item_tv_left"
                        android:text="Expiry Time:"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/expiryEditText"
                        style="@style/item_et_right"
                        android:hint="MM/YYYY"
                        android:inputType="number"
                        android:maxLength="7"
                        tools:ignore="Deprecated,RtlHardcoded,TextFields" />
                </LinearLayout>

                <View style="@style/item_view_line" />

                <LinearLayout
                    style="@style/item_layout"
                    tools:ignore="PxUsage">

                    <TextView
                        style="@style/item_tv_left"
                        android:text="CVC:"
                        tools:ignore="HardcodedText" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <EditText
                            android:id="@+id/cvcEditText"
                            style="@style/item_et_right"
                            android:layout_width="match_parent"
                            android:inputType="number"
                            android:maxLength="4"
                            tools:ignore="Deprecated,RtlHardcoded,TextFields" />

                        <TextView
                            android:id="@+id/cvcEditText_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="CVC显示位置在信用卡背面，签名处末尾的顶端以斜体字显示。"
                            android:textColor="#999999"
                            android:textSize="12dp" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_save"
                style="@style/WPBtn.Normal.Important"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:text="Save"
                android:textSize="15dp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/pb_loading"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:indeterminateDrawable="@drawable/pb_loading_before6" />

    </LinearLayout>
</RelativeLayout>